{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ],
  "references": [
    {
      "path": "../tsconfig.node.json"
    }
  ]
}
