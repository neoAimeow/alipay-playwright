{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./../types/main-env.d.ts"
  ]
}
